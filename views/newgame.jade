extends layout

block page-styles
	link(rel="stylesheet", href="/public/styles/lobby.css")

block content
	main
		if user
			h2= 'Hello, ' + user.name
			img(src=user.image)

		h2 New Game
		form(action="/newgame", method="POST")
			input(type="text", name="game-name", placeholder="Name")
			input(type="number", name="game-count", placeholder="Players Count")
			input(type="submit", value="Create")
